{
  "extends": ["eslint:recommended", "google"],
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "padded-blocks": "off",
    "brace-style": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"], "capIsNewExceptionPattern": "^Etools.." }],
    "no-var": "off",
    "no-debugger": "off",
    "no-undef": "warn",
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "no-console": "off",
    "comma-dangle": ["error", "never"],
    "guard-for-in": "off",
    "max-len": ["error", { "code": 150 }],
    "camelcase": ["error", {"properties": "never"}],
    "object-curly-spacing": ["warn", "always"]
  },
  "globals": {
    "moment": true,
    "Promise": true,
    "Polymer": true,
    "PolymerRedux": true,
    "Dexie": true,
    "EtoolsMixinFactory": true,
    "EtoolsDashboard": true,
    "EtoolsRequestCacheDb": true,
    "EtoolsAjaxRequestMixin": true,
    "EtoolsMixins": true,
    "EtoolsLogsMixin": true,
    "_": true,
    "ShadyCSS": true,
    "shortid":true
  }
}
